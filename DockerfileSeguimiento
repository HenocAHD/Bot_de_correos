#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/runtime:6.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["MailBot.Seguimiento/NuGet.Config", "MailBot.Seguimiento/"]
COPY ["MailBot.Seguimiento/MailBot.Seguimiento.csproj", "MailBot.Seguimiento/"]
COPY ["MailBot.Seguimiento/NuGet.Config", "MailBot.Seguimiento/"]
COPY ["SendgridApi/SendgridApi.csproj", "SendgridApi/"]
RUN dotnet restore "MailBot.Seguimiento/MailBot.Seguimiento.csproj"
COPY . .
WORKDIR "/src/MailBot.Seguimiento"
RUN dotnet build "MailBot.Seguimiento.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "MailBot.Seguimiento.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "MailBot.Seguimiento.dll"]