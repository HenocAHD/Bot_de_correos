#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/runtime:6.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["MailBot.SendGrid/NuGet.Config", "MailBot.SendGrid/"]
COPY ["MailBot.SendGrid/MailBot.SendGrid.csproj", "MailBot.SendGrid/"]
COPY ["MailBot.SendGrid/NuGet.Config", "MailBot.SendGrid/"]
COPY ["SendgridApi/SendgridApi.csproj", "SendgridApi/"]
RUN dotnet restore "MailBot.SendGrid/MailBot.SendGrid.csproj"
COPY . .
WORKDIR "/src/MailBot.SendGrid"
RUN dotnet build "MailBot.SendGrid.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "MailBot.SendGrid.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "MailBot.SendGrid.dll"]