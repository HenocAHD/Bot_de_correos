#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/runtime:6.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["Mailbot.Snovio/NuGet.Config", "Mailbot.Snovio/"]
COPY ["Mailbot.Snovio/MailBot.Snovio.csproj", "Mailbot.Snovio/"]
COPY ["Mailbot.Snovio/NuGet.Config", "Mailbot.Snovio/"]
COPY ["Snovio/SnovioApi.csproj", "Snovio/"]
RUN dotnet restore "Mailbot.Snovio/MailBot.Snovio.csproj"
COPY . .
WORKDIR "/src/Mailbot.Snovio"
RUN dotnet build "MailBot.Snovio.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "MailBot.Snovio.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "MailBot.Snovio.dll"]